# Flight search (Booking.com Flights via RapidAPI)
BOOKING_FLIGHTS_RAPIDAPI_HOST=booking-com18.p.rapidapi.com
BOOKING_FLIGHTS_RAPIDAPI_KEY=your_rapidapi_key

# Optional: Skyscanner backup via RapidAPI
SKYSCANNER_RAPIDAPI_HOST=skyscanner44.p.rapidapi.com

# Booking.com Affiliate Credentials
# Get these from https://www.booking.com/affiliate-program
BOOKING_AFFILIATE_ID=your_booking_affiliate_id

# Optional: RapidAPI Booking.com data (used for real hotel lists)
RAPIDAPI_HOST=your_rapidapi_host
RAPIDAPI_KEY=your_rapidapi_key

# TripAdvisor via RapidAPI (restaurants)
TRIPADVISOR_RAPIDAPI_HOST=tripadvisor16.p.rapidapi.com
TRIPADVISOR_RAPIDAPI_KEY=your_rapidapi_key
# Optional: JSON mapping of city name to TripAdvisor locationId
# Example: {"Paris":"304554","London":"186338"}
TRIPADVISOR_LOCATION_MAP={}

# Klook Affiliate Link (for tours, activities, insurance, car rentals)
# Get your affiliate link from https://affiliate.klook.com
KLOOK_AFFILIATE_URL=https://klook.tpx.lu/89cfHZHx

# Klook Hotel Deep Links (affiliate), JSON map of city -> url
# Use the Klook Link Generator to create these links.
KLOOK_HOTEL_LINKS={"Paris":"https://www.klook.com/en-GB/destination/c107-paris/3-hotel/","London":"https://www.klook.com/en-GB/destination/c106-london/3-hotel/","Barcelona":"https://www.klook.com/destination/c108-barcelona/3-hotel/"}

# Train Booking Affiliate IDs (optional)
TRAINLINE_AFFILIATE_ID=your_trainline_affiliate_id
OMIO_AFFILIATE_ID=your_omio_affiliate_id

# Mapbox (frontend uses this, but backend can validate)
MAPBOX_ACCESS_TOKEN=your_mapbox_token

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS - Frontend URL
FRONTEND_URL=http://localhost:3000

# Optional tuning
PACKAGE_SEARCH_CONCURRENCY=5
PACKAGE_MIN_RESULTS=6
PACKAGE_DATE_SAMPLES=5
BOOKING_HOTEL_ROWS=24
MANUAL_PACKAGE_CUTOFF_DAYS=14

# Data accuracy controls (set to true for live-only results)
REQUIRE_LIVE_FLIGHTS=false
REQUIRE_LIVE_HOTELS=false
REQUIRE_HOTEL_IMAGES=false
